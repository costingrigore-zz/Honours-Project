<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="50dp"
    android:background="@drawable/gradient"
    tools:context=".ProgressFragment">
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:background="@drawable/left_light_round_shape"
            android:backgroundTint="@color/white"
            android:paddingLeft="20dp"
            android:layout_marginTop="40dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Progress"
            android:textColor="#CBFFFFFF"
            android:textSize="20dp" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/dark_transparency"
        android:isScrollContainer="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingBottom="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:weightSum="100"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/cardioButton"
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:text="Cardio"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_button"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/stretchingButton"
                    android:layout_width="0dp"
                    android:layout_weight="27"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:text="Stretching"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_button"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/weightTrainingButton"
                    android:layout_width="0dp"
                    android:layout_weight="33"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:text="Weight Training"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_button"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/coreButton"
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:text="Core"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_button"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph2"
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:layout_margin="10dp"
                android:layout_height="200dp" />
            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="300dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>