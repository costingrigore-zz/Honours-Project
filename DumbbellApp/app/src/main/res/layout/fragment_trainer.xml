<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_cold"
    android:layout_marginBottom="50dp"
    android:orientation="vertical"
    tools:context=".TrainerFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="100"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="60"
                    android:layout_height="wrap_content"
                    android:background="@drawable/left_dark_round_shape"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="Trainer"
                    android:textColor="@color/light_blue"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="100"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dayText"
                    android:layout_width="0dp"
                    android:layout_weight="90"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/right_dark_round_shape"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/workout_setup_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:visibility="gone"
                tools:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content"
                        android:background="@drawable/left_dark_round_shape"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginRight="5dp"
                        android:text="Set the body area of the workout:"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content"
                        android:background="@drawable/right_dark_round_shape"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:text="Set the difficulty of the workout"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="20dp"
                    android:background="@drawable/round_button"
                    android:backgroundTint="@color/light_transparency"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:gravity="left"
                        android:orientation="vertical">
                        <CheckBox
                            android:id="@+id/lower_body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lower Body"
                            android:button="@drawable/checkbox"
                            android:buttonTint="@color/black"
                            android:padding="20dp"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            />
                        <CheckBox
                            android:id="@+id/upper_body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upper Body"
                            android:button="@drawable/checkbox"
                            android:buttonTint="@color/black"
                            android:padding="20dp"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            />
                        <CheckBox
                            android:id="@+id/total_body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox"
                            android:buttonTint="@color/black"
                            android:padding="20dp"
                            android:text="Total Body"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:gravity="left"
                        android:orientation="vertical">
                        <CheckBox
                            android:id="@+id/easy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Easy"
                            android:button="@drawable/checkbox"
                            android:buttonTint="@color/black"
                            android:padding="20dp"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            />
                        <CheckBox
                            android:id="@+id/medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medium"
                            android:button="@drawable/checkbox"
                            android:buttonTint="@color/black"
                            android:padding="20dp"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            />
                        <CheckBox
                            android:id="@+id/difficult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox"
                            android:buttonTint="@color/black"
                            android:padding="20dp"
                            android:text="Difficult"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/button"
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/round_button"
                    android:text="Start"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:backgroundTint="@color/dark_transparency"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- TODO: Update blank fragment layout -->

</LinearLayout>