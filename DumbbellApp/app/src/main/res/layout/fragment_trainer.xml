<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    android:layout_marginBottom="50dp"
    android:orientation="vertical"
    tools:context=".TrainerFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Welcome to the Trainer page, here is where the magic happens.
\n
\n Based on your level of experience and your goal we have prepared personalised workout routines just for you.
\n
\n Press 'Start' once you are ready"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_horizontal" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/white"
                    android:background="@drawable/round_button"
                    android:text="Start" />
        </LinearLayout>
    </ScrollView>
    <!-- TODO: Update blank fragment layout -->

</LinearLayout>