android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/gradient"
android:orientation="vertical"
tools:context=".WorkoutActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:paddingBottom="60dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/initial_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            tools:visibility="visible">
            <TextView
                android:layout_width="316dp"
                android:layout_height="wrap_content"
                android:background="@drawable/left_light_round_shape"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="Component 1: Warm-up"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:layout_width="316dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/right_dark_round_shape"
                android:gravity="right"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="For this stage we recommend to warm up for 10 minutes, to do that you could:
    \n - Go for a quick walk
    \n - Go for a run
    \n - Practise your dancing skills"
                android:textColor="@color/white"
                android:textSize="20dp" />
            <!-- Cardio exercises-->
            <TextView
                android:layout_width="316dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/left_light_round_shape"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="Component 2: Cardio
    \n
    \nHow would you like to measure your cardio exercises?"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/cardioSetsandRepsCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:button="@drawable/checkbox"
                android:buttonTint="@color/white"
                android:padding="20dp"
                android:text="Use sets and repetitions"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/cardioSetsAndRepsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
