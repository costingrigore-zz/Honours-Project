                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="50"
                        android:background="@drawable/right_light_round_shape"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <NumberPicker
                            android:id="@+id/cardioTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:outlineSpotShadowColor="@color/white"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="316dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/right_dark_round_shape"
                android:gravity="right"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="These are the exercises that you will do for your cardio stage. Each exercise will last one minute, with a 30 seconds break"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="LinearLayoutManager"
                tools:listitem="@layout/fragment_trainer_exercises"></androidx.recyclerview.widget.RecyclerView>

            <!-- Weight training exercises -->
