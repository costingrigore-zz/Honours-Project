<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ProfileFragment"
    android:paddingBottom="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="50dp"
            android:paddingBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="47.5"
                    android:layout_height="50dp"
                    android:background="@drawable/left_light_round_shape"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="Profile"
                    android:textColor="@color/default_text"
                    android:textSize="20dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="52.5"
                    android:gravity="right">
                <Button
                    android:id="@+id/edit_profile"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edit_button"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                >
                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.75"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/left_dark_round_shape">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Height"
                        android:textColor="@color/default_text"
                        android:paddingBottom="30dp"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Weight"
                        android:textColor="@color/default_text"
                        android:paddingBottom="30dp"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textColor="@color/default_text"
                        android:paddingBottom="30dp"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Level of experience"
                        android:textColor="@color/default_text"
                        android:paddingBottom="30dp"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Goal"
                        android:textColor="@color/default_text"
                        android:paddingBottom="30dp"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Days of the week"
                        android:textColor="@color/default_text"
                        android:paddingBottom="30dp"
                        android:textSize="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".5"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.75"
                    android:orientation="vertical"
                    android:background="@drawable/right_dark_round_shape"
                    android:padding="20dp"
                    android:gravity="right"
                    >
                    <TextView
                        android:id="@+id/heightText"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Height"
                        android:textColor="@color/default_text"
                        android:paddingBottom="30dp"
                        android:gravity="right"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/weightText"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Weight"
                        android:textColor="@color/default_text"
                        android:paddingBottom="30dp"
                        android:gravity="right"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/ageText"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textColor="@color/default_text"
                        android:paddingBottom="30dp"
                        android:gravity="right"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/level_of_experience_text"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Level of experience"
                        android:textColor="@color/default_text"
                        android:paddingBottom="30dp"
                        android:gravity="right"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/goal_text"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Goal"
                        android:textColor="@color/default_text"
                        android:paddingBottom="30dp"
                        android:gravity="right"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/days_of_the_week_text"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Days of the week"
                        android:textColor="@color/default_text"
                        android:paddingBottom="30dp"
                        android:gravity="right"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>