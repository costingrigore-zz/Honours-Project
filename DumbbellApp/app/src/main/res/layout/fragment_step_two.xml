<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StepOne">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:background="@drawable/left_light_round_shape"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="You have successfully completed your profile!"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:layout_gravity="right"
                    android:background="@drawable/right_light_round_shape"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:text="Here are some instructions before starting to use the application:"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/left_light_round_shape">
                    <ImageView
                        android:paddingTop="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ic_run"
                        />
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="Exercises"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"/>
                    <ImageView
                        android:paddingTop="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ic_chart"
                        />
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="Insights"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"/>
                    <ImageView
                        android:paddingTop="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ic_trainer"
                        />
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="Trainer"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"/>
                    <ImageView
                        android:paddingTop="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ic_star"
                        />
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="Goals"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"/>
                    <ImageView
                        android:paddingTop="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ic_profile"
                        />
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="Profile"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"/>
                </LinearLayout>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/right_light_round_shape">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:text="The Exercises Button will show you all available exercises in a list."
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:text="The Insights Button will show you your progress for previous weeks."
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:text="The Trainer Button will show you the workout for each day."
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:text="The Goals Button will allow you to set goals and follow their progress."
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:text="The Profile Button will show you your personal details."
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <Button
                android:id="@+id/nextButton"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/round_button"
                android:padding="5dp"
                android:text="Next"
                android:textSize="20dp"
                android:layout_gravity="center"
                app:backgroundTint="#FFFFFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>