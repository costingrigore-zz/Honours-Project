<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/card_exercise"
    android:backgroundTint="#2E2E2E"
    android:minHeight="1000dp"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".StepOne">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:fillViewport="true"
        android:isScrollContainer="false"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="Height"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/height_popup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:ems="5"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="10dp"
                    android:text="cm"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="Weight"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/weight_popup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:ems="5"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="10dp"
                    android:text="kg"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:paddingBottom="40dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="Age"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/age_popup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:ems="5"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="10dp"
                    android:text="years"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:layout_width="316dp"
                android:layout_height="wrap_content"
                android:background="@drawable/left_light_round_shape"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="Level of experience with fitness:"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="40dp"
                android:paddingBottom="40dp">

                <CheckBox
                    android:id="@+id/beginner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:button="@drawable/checkbox"
                    android:buttonTint="@color/white"
                    android:padding="20dp"
                    android:text="Beginner"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <CheckBox
                    android:id="@+id/intermediate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:button="@drawable/checkbox"
                    android:buttonTint="@color/white"
                    android:padding="20dp"
                    android:text="Intermediate"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <CheckBox
                    android:id="@+id/advanced"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:button="@drawable/checkbox"
                    android:buttonTint="@color/white"
                    android:padding="20dp"
                    android:text="Advanced"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <CheckBox
                    android:id="@+id/professional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:button="@drawable/checkbox"
                    android:buttonTint="@color/white"
                    android:padding="20dp"
                    android:text="Professional"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:layout_width="316dp"
                android:layout_height="wrap_content"
                android:background="@drawable/left_light_round_shape"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="Goal:"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="40dp"
                android:paddingBottom="40dp">

                <CheckBox
                    android:id="@+id/gain_strength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:button="@drawable/checkbox"
                    android:buttonTint="@color/white"
                    android:padding="20dp"
                    android:text="Gain strength"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <CheckBox
                    android:id="@+id/lose_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:button="@drawable/checkbox"
                    android:buttonTint="@color/white"
                    android:padding="20dp"
                    android:text="Lose weight"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <CheckBox
                    android:id="@+id/be_fit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:button="@drawable/checkbox"
                    android:buttonTint="@color/white"
                    android:padding="20dp"
                    android:text="Be fit"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:layout_width="316dp"
                android:layout_height="wrap_content"
                android:background="@drawable/left_light_round_shape"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="Days to exercise:"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="40dp"
                android:paddingBottom="40dp">

                <CheckBox
                    android:id="@+id/monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:button="@drawable/checkbox"
                    android:buttonTint="@color/white"
                    android:padding="20dp"
                    android:text="Monday"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <CheckBox
                    android:id="@+id/tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:button="@drawable/checkbox"
                    android:buttonTint="@color/white"
                    android:padding="20dp"
                    android:text="Tuesday"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <CheckBox
                    android:id="@+id/wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:button="@drawable/checkbox"
                    android:buttonTint="@color/white"
                    android:padding="20dp"
                    android:text="Wednesday"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <CheckBox
                    android:id="@+id/thursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:button="@drawable/checkbox"
                    android:buttonTint="@color/white"
                    android:padding="20dp"
                    android:text="Thursday"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <CheckBox
                    android:id="@+id/friday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:button="@drawable/checkbox"
                    android:buttonTint="@color/white"
                    android:padding="20dp"
                    android:text="Friday"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <CheckBox
                    android:id="@+id/saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:button="@drawable/checkbox"
                    android:buttonTint="@color/white"
                    android:padding="20dp"
                    android:text="Saturday"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <CheckBox
                    android:id="@+id/sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:button="@drawable/checkbox"
                    android:buttonTint="@color/white"
                    android:padding="20dp"
                    android:text="Sunday"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="10"
        android:gravity="center">

        <Button
            android:id="@+id/submit_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/save_button"
            android:textSize="20dp" />

        <Button
            android:id="@+id/close_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/close_button"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>